@model IEnumerable<Anime>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="album py-5 bg-light">
    <div class="container">
        <form asp-controller="Anime" asp-action="Index" method="get" class="mb-2">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by Title" value="@ViewBag.CurrentFilter">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.PosterImage" alt="@item.Title">
                        <div class="card-body">
                            <h4 class="card-title fw-bold text-center">@item.Title</h4>
                            <p class="card-text"><strong>Episode/s:</strong> @item.Episodes</p>
                            <p class="card-text"><strong>Status:</strong> @item.Status</p>
                            <p class="card-text"><strong>Date Aired:</strong> @item.DateAired.ToString("yyyy-MM-dd")</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Anime" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a asp-controller="Anime" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>